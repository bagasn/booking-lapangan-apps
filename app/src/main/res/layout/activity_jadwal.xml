<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fauzifahrizal.lapangan.JadwalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Tanggal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text=":"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/text_tanggal"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="64dp"
            android:drawableEnd="@drawable/ic_date_range_gray"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_date_range_gray"
            android:gravity="center"
            android:padding="6dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_jadwal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#a9a9a9"
        android:dividerHeight="1dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        tools:listitem="@layout/row_list_jadwal" />

</LinearLayout>
